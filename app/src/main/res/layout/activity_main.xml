<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMain">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로 또 머 신"
        android:textStyle="bold"
        android:textSize="80sp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <NumberPicker
        android:id="@+id/npNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/btnAddNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnAddNumber"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/npNumberPicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnInitialization" />

    <Button
        android:id="@+id/btnInitialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnInitialization"
        app:layout_constraintTop_toTopOf="@id/btnAddNumber"
        app:layout_constraintStart_toEndOf="@id/btnAddNumber"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/btnAddNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="-"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:visiblility="visible"
            android:gravity="center"
            android:background="@drawable/circle_blue"/>

        <TextView
            android:id="@+id/tvNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="-"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:visiblility="visible"
            android:gravity="center"
            android:background="@drawable/circle_yellow"/>

        <TextView
            android:id="@+id/tvNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="-"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:visiblility="visible"
            android:gravity="center"
            android:background="@drawable/circle_red"/>

        <TextView
            android:id="@+id/tvNumber4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="-"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:visiblility="visible"
            android:gravity="center"
            android:background="@drawable/circle_gray"/>

        <TextView
            android:id="@+id/tvNumber5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="-"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:visiblility="visible"
            android:gravity="center"
            android:background="@drawable/circle_green"/>

        <TextView
            android:id="@+id/tvNumber6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="-"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:visiblility="visible"
            android:gravity="center"
            android:background="@drawable/circle_blue"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnRun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btnRun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>